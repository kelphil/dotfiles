#!/usr/bin/env bash

#+------------------------------------------------------------------------------------------
# Global Unix Aliases by Kelvin Philip
#+------------------------------------------------------------------------------------------


## -----------------------------------------------------------------------------------------
# Safety
## -----------------------------------------------------------------------------------------
alias rm='rm -I --preserve-root'
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

## -----------------------------------------------------------------------------------------
# List
## -----------------------------------------------------------------------------------------
alias ll='ls -la'
alias l.='ls -d .*'
alias l='ls -lrat'

## -----------------------------------------------------------------------------------------
# Search
## -----------------------------------------------------------------------------------------
alias grep="grep --color=auto"
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias g='grep'

## -----------------------------------------------------------------------------------------
# Directory Jumps
## -----------------------------------------------------------------------------------------
alias bk='cd -'
alias c1='cd ..'
alias c2='cd ../../'
alias c3='cd ../../../'
alias c4='cd ../../../../'
alias c5='cd ../../../../../'

## -----------------------------------------------------------------------------------------
# Basics
## -----------------------------------------------------------------------------------------
alias c='clear'
alias x='exit'

## -----------------------------------------------------------------------------------------
# History
## -----------------------------------------------------------------------------------------
alias hh='history'
alias h='history | grep -i'
alias ht='history | grep `date +%y%m%d` | grep -i'
alias hn='hostname'

## -----------------------------------------------------------------------------------------
# DateTime
## -----------------------------------------------------------------------------------------
alias NextYear='date --date="1 year"'
alias NextMonth='date --date="1 month"'
alias NextWeek='date --date="1 week"'
alias Today='date --date="now"'
alias OneWeekAgo='date --date="1 week ago"'
alias OneMonthAgo='date --date="1 month ago"'
alias OneYearAgo='date --date="1 year ago"'

## -----------------------------------------------------------------------------------------
# TaskWarrior
## -----------------------------------------------------------------------------------------
alias t='task all'
alias ts='task summary'
alias tb='task burndown.daily'
alias tw='task due.before:eow'
alias tm='task due.before:today+30days'
alias tui='/usr/local/bin/taskwarrior-tui'

## -----------------------------------------------------------------------------------------
# Editors
## -----------------------------------------------------------------------------------------
alias v='nvim'
alias s=/usr/local/bin/sublime
alias n=nedit
alias vis='nvim "+set si"'
alias edit='nvim'
alias meld='/usr/bin/python /usr/bin/meld'

## -----------------------------------------------------------------------------------------
# Updates
## -----------------------------------------------------------------------------------------
alias apt-get="sudo apt-get"
alias updatey="sudo apt-get --yes"
alias update='sudo apt-get upgrade && sudo apt-get update'

## -----------------------------------------------------------------------------------------
# Disk Usage
## -----------------------------------------------------------------------------------------
alias df='df -H'
alias du='du -ch'

## -----------------------------------------------------------------------------------------
# Compute Resource Usage
## -----------------------------------------------------------------------------------------
alias meminfo='free -m -l -t'
alias psmem='ps auxf | sort -nr -k 4'
alias psmem10='ps auxf | sort -nr -k 4 | head -10'
alias pscpu='ps auxf | sort -nr -k 3'
alias pscpu10='ps auxf | sort -nr -k 3 | head -10'
alias cpuinfo='lscpu'
alias gpumeminfo='grep -i --color memory /var/log/Xorg.0.log'
#alias top='atop'

## -----------------------------------------------------------------------------------------
# Networking
## -----------------------------------------------------------------------------------------
alias dnstop='dnstop -l 5  eth1'
alias vnstat='vnstat -i eth1'
alias iftop='iftop -i eth1'
alias tcpdump='tcpdump -i eth1'
alias ethtool='ethtool eth1'
alias iwconfig='iwconfig wlan0'
alias ping='ping -c 5'
alias fastping='ping -c 100 -s.2'
alias ports='netstat -tulanp'

## -----------------------------------------------------------------------------------------
# VNC
## -----------------------------------------------------------------------------------------
alias vnclist='vncserver -list'
alias vnckill='vncserver -kill'

## -----------------------------------------------------------------------------------------
# Utilities
## -----------------------------------------------------------------------------------------
function fvi() {
   nvim $(which $1)
}

## -----------------------------------------------------------------------------------------
# Misc
## -----------------------------------------------------------------------------------------
alias ssh='ssh -Y'
alias j='jobs -l'
alias mkdir='mkdir -pv'
alias path='echo -e ${PATH//:/\\n}'

## -----------------------------------------------------------------------------------------
